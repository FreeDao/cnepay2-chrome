<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="手机号"
                android:textColor="#0099ff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile_charge_number"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center|left"
                android:hint="请输入充值手机号"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="再次输入"
                android:textColor="#0099ff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/mobile_charge_number_repeat"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center|left"
                android:hint="再次输入充值手机号"
                android:inputType="number"
                android:lines="1"
                android:maxLength="11"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="请选择充值金额："
            android:textColor="#0099ff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/mobile_charge_amount"
            android:layout_width="wrap_content"
            android:layout_height="0dip"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/mobile_charge_300"
                android:tag="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="300元（价格：300.00元）"
                android:textColor="#0099ff"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/mobile_charge_100"
                android:tag="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100元（价格：100.00元）"
                android:textColor="#0099ff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/mobile_charge_50"
                android:tag="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50元  （价格：50.00元）"
                android:textColor="#0099ff"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/mobile_charge_30"
                android:tag="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="30元  （价格：30.00元）"
                android:textColor="#0099ff"
                android:textStyle="bold" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentBottom="true"
         >

        <Button
            android:id="@+id/mobile_charge_submit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/button"
            android:shadowColor="#333333"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="充值"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>