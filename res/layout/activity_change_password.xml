<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="旧密码"
                android:textColor="#0099ff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/change_pwd_old"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center|left"
                android:hint="请输入您以前的密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="新密码"
                android:textColor="#0099ff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/change_pwd_new"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center|left"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true" >

            <TextView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text="再次输入"
                android:textColor="#0099ff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/change_pwd_new_repeat"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:gravity="center|left"
                android:hint="重复输入您的密码"
                android:inputType="textPassword"
                android:lines="1"
                android:maxLength="6"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:text="友情提示： \n修改密码功能仅是对注册用户的密码进行修改，并非修改银行卡密码。" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/change_pwd_submit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/button"
            android:shadowColor="#333333"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>