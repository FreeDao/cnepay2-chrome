<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:baselineAligned="false"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:text="账号信息"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0099ff" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <EditText
                    android:id="@+id/reg_phone"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="手机号作为登录账号"
                    android:inputType="phone"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/phonenumber_reg"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="手机号码"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/first_pwd_reg"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="6位数字或字母"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/password_reg"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="登录密码"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/second_pwd_reg"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="再次输入密码"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/repassword_reg"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="再次输入"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="银行信息"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#0099ff" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/reg_account_number"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="初始化刷卡器..."
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/account_reg"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="银行卡号"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/reg_username"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="您的真实姓名"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reg_name"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="用户姓名"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/reg_idnumber"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入真实身份证号"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/reg_personid"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="身份证号"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/reg_bankname"
                    style="@style/input"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:hint="选择开户银行"
                    android:lines="1"
                    android:paddingLeft="85dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/show_bankname_reg"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="1px"
                    android:gravity="right|center_vertical"
                    android:paddingRight="10dp"
                    android:text="银行名称"
                    android:textColor="#0099ff"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/reg_submit"
            style="@style/button"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:text="提交注册信息" />
    </LinearLayout>

</LinearLayout>