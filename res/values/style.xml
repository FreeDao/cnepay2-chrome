<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="custTitleBg">
        <item name="android:background">@drawable/titlebar2</item>
    </style>
    <style name="title" parent="android:Theme.Light">
        <item name="android:windowTitleSize">50dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/custTitleBg</item>
    </style>
    <style name="hide_title" parent="android:Theme.Light">
        <item name="android:windowTitleSize">0dp</item>
    </style>
    <style name="button">  
        <item name="android:background">@drawable/button</item>  
        <item name="android:shadowColor">#ffffff</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">#535353</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="input">  
        <item name="android:background">@drawable/input</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
    <style name="link">  
        <item name="android:background">@drawable/link_btn</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="alertdialog">
        <item name="android:fullDark">@drawable/dialog_full_holo_light</item>
        <item name="android:topDark">@drawable/dialog_top_holo_light</item>
        <item name="android:centerDark">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomDark">@drawable/dialog_bottom_holo_light</item>
        <item name="android:fullBright">@drawable/dialog_full_holo_light</item>
        <item name="android:topBright">@drawable/dialog_top_holo_light</item>
        <item name="android:centerBright">@drawable/dialog_middle_holo_light</item>
        <item name="android:bottomBright">@drawable/dialog_bottom_holo_light</item>
        <item name="android:bottomMedium">@drawable/dialog_bottom_holo_light</item>
        <item name="android:centerMedium">@drawable/dialog_middle_holo_light</item>
    </style>
    <style name="MyAlertDialog" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/alertdialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="pswdstyle">  
        <item name="android:background">@drawable/pswd</item>  
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="Theme" parent="android:Theme">
    </style>
    <style name="Theme.Transparent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#FFFFFF</item>
        <item name="android:windowBackground">@color/transparent_background</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>
</resources>